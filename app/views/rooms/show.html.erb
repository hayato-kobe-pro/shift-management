<% i = 0 %>
<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Room:</strong>
  <%= @room.id %>
</p>
<p>
  <strong>Room name:</strong>
  <%= @room.name %>
</p>

<%# ２つ目のテーブル %>
<div class="row">

<table border="1" align="left" class="col-3">
<tr >
<td>　</td>
</tr>
<tr>
<td>名前</td>
</tr>

<% @names.each do |name| %>
<tr>
<td style="height:40px;"><%= name %></td>
</tr>
<% end %>

</table>



<% (1..3).each do |n| %>
<table border="1" class="col-3">
  <tr>
     <td colspan="3"><%= (@date[n - 1].month ) %>/<%= (@date[n -1 ].day ) %></td>
  </tr>      
  <tr>
      <td>長</td><td>低</td><td>高</td>
  </tr>    
  <% @names.each_with_index do |name| %>
  <tr>
      <td><button type="button" class="btn btn-light w-100"><%= check_time name,"#{Date.today - (Date.today.wday - (1 + i))} 17" %></button></td>
     <td><button type="button" class="btn btn-light w-100"><%= check_time name,"#{Date.today - (Date.today.wday - (1 + i))} 18" %></button></td>
     <td><button type="button" class="btn btn-light w-100"><%= check_time name,"#{Date.today - (Date.today.wday - (1 + i))} 19" %></button></td>
  </tr>
  <% end %>
  <% i+=2 %>
  
</table>
<% end %>






</div>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>







